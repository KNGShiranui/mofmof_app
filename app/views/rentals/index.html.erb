<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <tr>
    <th>物件名</th>
    <th>賃料</th>
    <th>住所</th>
    <th>築年数</th>
    <th>備考</th>
    <th colspan="3"></th>
  </tr>

<% @rentals.each do |rental| %>
  <tr>
    <td><%= rental.name %></td>
    <td><%= rental.rent.to_s(:delimited)%> </td>
    <td><%= rental.address %></td>
    <td><%= rental.age %></td>
    <td><%= rental.remarks %></td>
    <td><%= link_to "詳細", rental_path(rental.id) %></td>
    <td><%= link_to "編集", edit_rental_path(rental.id), data: { confirm: '編集しますか？' } %></td>
    <td><%= link_to "削除", rental_path(rental.id), method: :delete, data: { confirm: '削除しますか？' } %></td>
  </tr>
<% end %>
</table>